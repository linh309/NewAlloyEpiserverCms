@model IEnumerable<UserCommentViewModel>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>User's email</th>
            <th>Comment</th>
            <th>Page Name</th>
            <th>Created date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserEmail</td>
                <td>@item.CommentBody</td>
                <td>@item.PageName</td>
                <td>@item.CreatedDate</td>
                <td>
                    @if (!item.IsDeleted)
                    {
                        <button class="btn btn-small btn-danger btn-action" data-actiontype="Delete">Delete</button>
                    }
                    else
                    {
                        <button class="btn btn-small btn-warning btn-action" data-actiontype="Restore">Restore</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
